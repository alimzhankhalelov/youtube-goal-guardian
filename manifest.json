{
    "manifest_version": 3,
    "name": "Goal Guardian - YouTube Focus Blocker",
    "version": "1.1.0",
    "description": "AI-powered extension that blocks YouTube videos not aligned with your goals. Stay focused and productive.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Goal Guardian"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ]
}